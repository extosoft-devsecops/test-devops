# =============================================================================
# Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and adjust values
# =============================================================================

# Kubernetes Configuration
kubeconfig_path = "~/.kube/config"
kube_context    = "docker-desktop"  # or "gke_project_region_cluster" for GKE
namespace       = "test-devops"
environment     = "local"           # local, develop, uat, production

# Helm Configuration
release_name     = "test-devops"
helm_chart_path  = "../helm/test-devops"

# Application Configuration
image_repository = "test-devops"    # or "asia-southeast1-docker.pkg.dev/project/repo/image"
image_tag        = "latest"
service_name     = "test-devops"
replica_count    = 1

# Service Configuration
service_type      = "NodePort"      # NodePort, LoadBalancer, ClusterIP
service_node_port = 30080

# Autoscaling Configuration
autoscaling_enabled      = false
autoscaling_min_replicas = 1
autoscaling_max_replicas = 10

# Monitoring Configuration
datadog_enabled    = false
datadog_api_key    = ""             # Set your Datadog API key
prometheus_enabled = false

